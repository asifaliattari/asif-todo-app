apiVersion: v1
kind: Secret
metadata:
  name: taskflow-secrets
  namespace: taskflow
type: Opaque
stringData:
  # Database connection (Neon PostgreSQL)
  DATABASE_URL: "postgresql://user:password@host:5432/database?sslmode=require"
  
  # JWT Secret (generate with: openssl rand -base64 32)
  SECRET_KEY: "your-secret-key-here"
  
  # OpenAI API Key
  OPENAI_API_KEY: "sk-your-openai-api-key"
  
  # SendGrid Email Service
  SENDGRID_API_KEY: "SG.your-sendgrid-api-key"
  SENDER_EMAIL: "noreply@taskflow.app"
  ADMIN_EMAIL: "admin@example.com"

---
# NOTE: This is an example file. Create the actual secret.yaml with your values.
# DO NOT commit secret.yaml to git!
# 
# To create from your .env file:
# kubectl create secret generic taskflow-secrets \
#   --from-env-file=backend/.env \
#   --namespace=taskflow
